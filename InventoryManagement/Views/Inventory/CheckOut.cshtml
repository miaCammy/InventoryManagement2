@model InventoryManagement.ViewModel.InventoryViewModel

@{
    ViewData["Title"] = "CheckOut";
}

<h1>Check Out</h1>

<div>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Id)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Id)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ItemName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ItemName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ItemDescription)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ItemDescription)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ItemSku)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ItemSku)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ItemQuantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ItemQuantity)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ItemMinimumQuantity)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ItemMinimumQuantity)
        </dd>
    </dl>
</div>

@using (Html.BeginForm("CheckOutQuantity", "Inventory", FormMethod.Post))
{
    <div class="card-columns">
        @Html.HiddenFor(x => x.Id)
        <label class="control-label">Quantity</label>
        <input name="CheckOutAmount" min="0" max="@Model.ItemQuantity" class="form-control" type="number"/>
        <input type="submit" value="Update" class="btn btn-primary" />
    </div>
}
